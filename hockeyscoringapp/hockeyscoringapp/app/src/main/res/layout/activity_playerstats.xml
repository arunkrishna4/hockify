<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"> <!-- Added this to prevent content overlap with status bar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--
        *** Custom Top Bar REMOVED ***
        The title and back button are now handled by the system's Action Bar
        as configured in playerstats.java.
        -->

        <!-- Player Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E7ECFF"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgPlayerAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="Player Avatar"
                />

            <TextView
                android:id="@+id/tvPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Player Name"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPlayerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defender\nTeamName\nJersey - 7"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="#333333" />

            <!-- Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="28dp">

                <!-- Match Played Stat -->
                <TextView
                    android:id="@+id/tvMatchesPlayed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Matches Played: 20"
                    android:textSize="18sp"
                    android:paddingBottom="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"/>

                <!-- Total Goals Stat -->
                <TextView
                    android:id="@+id/tvTotalGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Goals: 9"
                    android:textSize="18sp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"/>

                <!-- Yellow Cards Stat -->
                <TextView
                    android:id="@+id/tvYellowCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yellow Cards: 3"
                    android:textSize="18sp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"/>

                <!-- Red Cards Stat -->
                <TextView
                    android:id="@+id/tvRedCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Red Cards: 1"
                    android:textSize="18sp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- History Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center" />

        <!-- History Table -->
        <TableLayout
            android:id="@+id/historyTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="#E7ECFF"
            android:padding="20dp"
            android:stretchColumns="0,1,2">

            <TableRow>
                <TextView android:text="Matches" android:textStyle="bold"
                    android:gravity="center" android:textSize="20sp"
                    android:layout_weight="1" android:paddingBottom="10dp"/>
                <TextView android:text="Goals" android:textStyle="bold"
                    android:gravity="center" android:textSize="20sp"
                    android:layout_weight="1" android:paddingBottom="10dp"/>
                <TextView android:text="Fouls" android:textStyle="bold"
                    android:gravity="center" android:textSize="20sp"
                    android:layout_weight="1" android:paddingBottom="10dp"/>
            </TableRow>

            <!-- Example Match 1 Row -->
            <TableRow android:layout_marginTop="13dp">
                <TextView android:text="Match 1" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
                <TextView android:text="4" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
                <TextView android:text="1" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
            </TableRow>

            <!-- Example Match 2 Row -->
            <TableRow android:layout_marginTop="13dp">
                <TextView android:text="Match 2" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
                <TextView android:text="0" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
                <TextView android:text="2" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
            </TableRow>

            <!-- Example Match 3 Row -->
            <TableRow android:layout_marginTop="13dp">
                <TextView android:text="Match 3" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
                <TextView android:text="2" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
                <TextView android:text="0" android:gravity="center"
                    android:textSize="16sp" android:layout_weight="1"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>
